    <script>
        function toggleQR() {
            document.getElementById('medicalQR').classList.toggle('active');
        }

        function toggleForm() {
            document.getElementById('medicalForm').classList.toggle('active');
        }

        function unlockPhone() {
            document.getElementById('unlockModal').style.display = 'block';
            document.getElementById('codeInput').focus();
        }

        function closeModal() {
            document.getElementById('unlockModal').style.display = 'none';
            document.getElementById('codeInput').value = '';
        }

        function verifyCode() {
            const code = document.getElementById('codeInput').value;
            if (code === '1988') {
                document.querySelector('.medical-protected-overlay').classList.add('unlocked');
                document.getElementById('callPersonalBtn').classList.remove('call-btn-hidden');
                document.getElementById('callPersonalBtn').classList.add('call-btn-visible');
                closeModal();
                alert('✅ Téléphone personnel déverrouillé');
            } else {
                alert('❌ Code incorrect');
                document.getElementById('codeInput').value = '';
            }
        }

        // Fermer le modal en cliquant en dehors
        window.onclick = function(event) {
            const modal = document.getElementById('unlockModal');
            if (event.target == modal) {
                closeModal();
            }
        }

        // Validation du code avec la touche Entrée
        document.getElementById('codeInput').addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                verifyCode();
            }
        });

        function downloadVCard() {
            const vcard = `BEGIN:VCARD
VERSION:3.0
FN:Dr CHEVALIER Julia
TITLE:Médecin Généraliste
NOTE:Médecine générale - Pédiatrie - Gynécologie
TEL;TYPE=WORK:04 93 43 21 37
EMAIL:doc.juliachevalier@gmail.com
ADR:;;11 rue Claude Pons;Cannes;;06400;France
END:VCARD`;
            
            const blob = new Blob([vcard], { type: 'text/vcard' });
            const url = window.URL.createObjectURL(blob);
            const link = document.createElement('a');
            link.href = url;
            link.download = 'dr-julia-chevalier.vcf';
            link.click();
        }

        function downloadQR() {
            const url = 'https://api.qrserver.com/v1/create-qr-code/?size=500x500&data=BEGIN:VCARD%0AVERSION:3.0%0AFN:Dr CHEVALIER Julia%0ATITLE:Médecin Généraliste%0ATEL;TYPE=WORK:04 93 43 21 37%0AEMAIL:doc.juliachevalier@gmail.com%0AADR:;;11 rue Claude Pons;Cannes;;06400;France%0AEND:VCARD';
            const link = document.createElement('a');
            link.href = url;
            link.download = 'qr-code-dr-julia-chevalier.png';
            link.click();
        }

        function shareWhatsApp() {
            const text = 'Voici ma carte de visite digitale :\n\nDr CHEVALIER Julia\nMédecin Généraliste\nMédecine générale • Pédiatrie • Gynécologie\n\n📧 doc.juliachevalier@gmail.com\n📞 04 93 43 21 37\n📍 11 rue Claude Pons, 06400 Cannes';
            window.open(`https://wa.me/?text=${encodeURIComponent(text)}`, '_blank');
        }

        function shareEmail() {
            const subject = 'Contact - Dr CHEVALIER Julia';
            const body = 'Bonjour,\n\nVoici mes coordonnées :\n\nDr CHEVALIER Julia\nMédecin Généraliste\nMédecine générale • Pédiatrie • Gynécologie\n\n📧 doc.juliachevalier@gmail.com\n📞 04 93 43 21 37\n📍 11 rue Claude Pons, 06400 Cannes';
            window.location.href = `mailto:?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
        }

        function shareSMS() {
            const text = 'Dr CHEVALIER Julia - Médecin Généraliste\n📞 04 93 43 21 37\n📧 doc.juliachevalier@gmail.com\n📍 11 rue Claude Pons, 06400 Cannes';
            window.location.href = `sms:?&body=${encodeURIComponent(text)}`;
        }

        async function sendMessage(event) {
            event.preventDefault();
            
            const name = document.getElementById('senderName').value;
            const email = document.getElementById('senderEmail').value;
            const phone = document.getElementById('senderPhone').value;
            const message = document.getElementById('senderMessage').value;

            // Vous pouvez modifier cette URL pour pointer vers votre propre script Google Apps Script
            try {
                const mailtoLink = `mailto:doc.juliachevalier@gmail.com?subject=Message de ${encodeURIComponent(name)}&body=${encodeURIComponent(`Nom: ${name}\nEmail: ${email}\nTéléphone: ${phone}\n\nMessage:\n${message}`)}`;
                window.location.href = mailtoLink;

                alert('✅ Votre client de messagerie va s\'ouvrir pour envoyer le message.');
                
                document.getElementById('senderName').value = '';
                document.getElementById('senderEmail').value = '';
                document.getElementById('senderPhone').value = '';
                document.getElementById('senderMessage').value = '';
                toggleForm();
            } catch (error) {
                alert('Une erreur est survenue. Veuillez contacter directement par email : doc.juliachevalier@gmail.com');
            }
        }
    </script>
</body>
</html>
