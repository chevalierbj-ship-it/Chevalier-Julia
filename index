    <div id="unlockModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">🔐 Code de sécurité</div>
            <input type="password" id="codeInput" class="modal-input" placeholder="Entrez le code" maxlength="4">
            <div class="modal-buttons">
                <button class="modal-btn modal-btn-cancel" onclick="closeModal()">Annuler</button>
                <button class="modal-btn modal-btn-confirm" onclick="verifyCode()">Valider</button>
